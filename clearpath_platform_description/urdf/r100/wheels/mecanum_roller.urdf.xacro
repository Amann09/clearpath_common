<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="r100_mecanum_roller">

  <!-- Single Roller -->
  <xacro:macro name="r100_mecanum_roller" params="prefix parent *origin">
    <link name="${prefix}_mecanum_roller">
      <visual>
        <material name="clearpath_black"/>
        <geometry>
          <mesh filename="package://clearpath_platform_description/meshes/r100/mecanum_roller.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01665"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 0.009625 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01625"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 0.01925 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01525"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 0.028875 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01325"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 -0.009625 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01625"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 -0.01925 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01525"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 -0.028875 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.01325"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="${pi} 0 0"/>
        <mass value="0.05"/>
        <inertia
          ixx="0.00001085" ixy="0" ixz="0"
          iyy="0.00001085" iyz="0"
          izz="0.00000250"/>
      </inertial>
    </link>

    <joint name="${prefix}_mecanum_roller_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <dynamics damping="0.001" friction="0.0001"/>
      <child link="${prefix}_mecanum_roller"/>
      <parent link="${parent}"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <gazebo reference="${prefix}_mecanum_roller">
      <mu1 value="0.8"/>
      <mu2 value="0.8"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <fdir1 value="1 0 0"/>
    </gazebo>

  </xacro:macro>
</robot>
